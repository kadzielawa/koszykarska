<% include head %>
<% include menu %>
	<fieldset class="fieldsetUser">
  	<legend>Zarejestruj się!</legend>

		<form id="registerForm" action="">
			<p>Login</p>
			<input type="text" name="username">  
			<p>Email</p>
			<input type="text" name="email">  
			<p>Hasło</p>
			<input type="text" name="password"><br/>
			<input id="registerButton" type="submit" value="Zarejestruj">
		</form>
	</fieldset>
<script>
	var frm = $('#registerForm');
    frm.submit(function (ev) {
        $.ajax({
            type: frm.attr('method'),
            url: frm.attr('action'),
            data: frm.serialize(),
            success: giveStatus
        });

        ev.preventDefault();
    });

    function giveStatus(data) {
    	alert(data.message);
    }
</script>
